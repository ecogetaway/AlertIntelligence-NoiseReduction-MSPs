# Application Configuration
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://msp_user:msp_password@localhost:5432/msp_alerts
REDIS_URL=redis://localhost:6379/0

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Bedrock AgentCore Configuration
BEDROCK_AGENTCORE_ENABLED=true
BEDROCK_AGENTCORE_RUNTIME_URL=https://your-agentcore-runtime-url.amazonaws.com

# Strands Agents Configuration
STRANDS_AGENTS_ENABLED=true
STRANDS_AGENTS_CONFIG_PATH=./agents/strands_config.yaml

# AI Model Configuration
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
DEFAULT_AI_MODEL=claude-3-sonnet

# Security
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1

# Alert Processing
ALERT_DEDUPLICATION_WINDOW=300
ALERT_CORRELATION_WINDOW=1800
MAX_ALERTS_PER_BATCH=100

# Workflow Processing
WORKFLOW_TIMEOUT=300
MAX_CONCURRENT_WORKFLOWS=10

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
